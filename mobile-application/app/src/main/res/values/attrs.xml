<resources>
    <declare-styleable name="LockerView">
        <attr name="icon" format="reference" />
        <attr name="showIcon" format="boolean" />
        <attr name="name" format="string" />
        <attr name="isFavourite" format="boolean" />
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="RentedLockerView" parent="LockerView">
        <attr name="rentStart" format="string" />
        <attr name="rentEnd" format="string" />
    </declare-styleable>

    <declare-styleable name="RentedUntilView">
        <attr name="from" format="string" />
        <attr name="until" format="string" />
    </declare-styleable>

    <declare-styleable name="LockerStatusView">
        <attr name="status" format="string" /> <!-- closed|opened|was_closed|was_open|unknown -->
        <attr name="statusTime" format="string" />
        <!-- need to add text styling and other parameters later for various alert cases -->
    </declare-styleable>

    <declare-styleable name="PriceView">
        <attr name="amount" format="string" />
        <attr name="exchangeRate" format="float" />
        <attr name="primary" format="boolean" />
    </declare-styleable>

    <declare-styleable name="HistoryView">
        <attr name="collapsed" format="boolean" />
    </declare-styleable>
</resources>